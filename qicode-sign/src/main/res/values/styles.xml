<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义对话框样式 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 其他区域点击是否消失 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 动画效果 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 透明与否 -->
        <item name="android:windowIsTranslucent">false</item>


    </style>

    <style name="FlatColorButtonRippleStyle.Transparent" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@color/transparent</item>
        <item name="rd_backgroundColor">@color/transparent_black_20</item>
        <item name="rd_rippleColor">@color/transparent_blue3_30</item>
        <item name="rd_cornerRadius">2dp</item>
        <item name="rd_delayClick">afterRelease</item>
    </style>


    <style name="FloatingActionButtonIconMoreBack" parent="FloatingActionButtonIcon">
        <item name="lmd_state">@xml/fab_icon_states_more_back</item>
    </style>

    <style name="FloatingActionButtonIcon" >
        <item name="lmd_curState">0</item>
        <item name="lmd_padding">2dp</item>
        <item name="lmd_animDuration">400</item>
        <item name="lmd_interpolator">@android:anim/accelerate_decelerate_interpolator</item>
        <item name="lmd_strokeSize">3dp</item>
        <item name="lmd_strokeColor">#FFFFFFFF</item>
        <item name="lmd_strokeCap">butt</item>
        <item name="lmd_strokeJoin">miter</item>
        <item name="lmd_clockwise">true</item>
    </style>

    <style name="Material.Widget.FloatingActionButton.Mini.Dark" parent="Material.Widget.FloatingActionButton.Mini">
        <item name="rd_backgroundColor">#33000000</item>
        <item name="rd_rippleColor">#33222222</item>
    </style>

    <style name="GrayCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_gray_icon_style</item>
    </style>

    <style name="BlueCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_blue_icon_style</item>
    </style>

    <style name="FlatColorButtonRippleStyle.Orange" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@color/orange5</item>
        <item name="rd_backgroundColor">@color/transparent_black_20</item>
        <item name="rd_rippleColor">@color/transparent_orange5_50</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="rd_delayClick">afterRelease</item>
    </style>

    <style name="FlatColorButtonRippleStyle.Blue" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@color/blue3</item>
        <item name="rd_backgroundColor">@color/transparent_black_20</item>
        <item name="rd_rippleColor">@color/transparent_blue3_50</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="rd_delayClick">afterRelease</item>
    </style>

    <style name="FlatColorButtonRippleStyle.Green" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@color/green0</item>
        <item name="rd_backgroundColor">@color/transparent_black_20</item>
        <item name="rd_rippleColor">@color/transparent_green0_50</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="rd_delayClick">afterRelease</item>
    </style>
</resources>